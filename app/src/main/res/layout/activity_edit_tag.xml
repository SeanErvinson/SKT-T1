<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditTagActivity">

    <LinearLayout
        android:id="@+id/ll_tag_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key"
            android:textSize="@dimen/mTextSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Device Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/sSpacing"
            android:text="Select from the menu your prefered device alarm sound" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBoxBorder"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tag_alarm_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xsSpacing"
            android:text="High"
            android:textSize="@dimen/sTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBoxBorder"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tv_tag_alarm_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xsSpacing"
            android:text="Medium"
            android:textSize="@dimen/xsTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBoxBorder"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/tv_tag_alarm_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xsSpacing"
            android:text="Low"
            android:textSize="@dimen/xsTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBoxBorder"
            android:orientation="vertical"/>
    </LinearLayout>
</LinearLayout>