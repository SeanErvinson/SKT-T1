<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.fragments.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_tag_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_tag"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add_black_24dp"
        android:contentDescription="@string/fab_add_tag"
        app:tint="@color/colorSecondaryInvert"
        app:backgroundTint="@color/colorPrimaryInvert"
        app:fabCustomSize="@dimen/xxlSize"
        app:fabSize="normal"
        app:maxImageSize="@dimen/mSize"
        app:elevation="0dp"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</FrameLayout>