<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary">

        <ImageView
            android:id="@+id/iv_action_bar_back_button"
            android:layout_gravity="center"
            android:layout_width="@dimen/xxlSize"
            android:layout_height="@dimen/xxlSize"
            android:contentDescription="@string/skt_t1_logo"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <ImageView
            android:id="@+id/iv_action_bar_back_account"
            android:layout_width="@dimen/hSize"
            android:layout_height="@dimen/hSize"
            android:contentDescription="@string/skt_t1_logo"
            android:src="@drawable/ic_logo_name" />

</LinearLayout>