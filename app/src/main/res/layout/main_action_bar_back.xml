<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:gravity="center"
    android:padding="@dimen/xsSpacing">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_action_bar_back_button"
            android:layout_width="@dimen/hSize"
            android:layout_height="@dimen/hSize"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/skt_t1_logo"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_left_black_24dp" />

        <ImageView
            android:id="@+id/iv_action_bar_back_account"
            android:layout_width="@dimen/hSize"
            android:layout_height="@dimen/hSize"
            android:contentDescription="@string/skt_t1_logo"
            android:src="@drawable/ic_logo_name" />
    </LinearLayout>


    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_action_bar__back_notification"
        android:layout_width="@dimen/lSize"
        android:layout_height="@dimen/lSize"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description_notification"
        android:tint="#434343"
        android:src="@drawable/ic_notifications_none_black_24dp" />
</RelativeLayout>