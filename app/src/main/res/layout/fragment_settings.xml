<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_settings_userData"
            android:layout_width="match_parent"
            android:background="@drawable/rectangle_button_border"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_settings_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/lTextSize"
                android:text="Wayne Madla"/>

            <TextView
                android:id="@+id/tv_settings_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sSpacing"
                android:textSize="@dimen/xsTextSize"
                android:text="EDIT PROFILE"/>

            <TextView
                android:id="@+id/tv_settings_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xsTextSize"
                android:text="Nickname: %1$s"/>

            <TextView
                android:id="@+id/tv_settings_number_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xsTextSize"
                android:text="Devices: %1$s"/>

            <TextView
                android:id="@+id/tv_settings_number_inactive_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xsTextSize"
                android:text="Inactive Devices: %1$s"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_settings_find_my_phone_alarm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectangle_button_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mTextSize"
                android:text="Find my Phone Alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xsTextSize"
                android:text="Set the sound this smartphone plays when alerted" />

            <TextView
                android:id="@+id/tv_settings_find_my_phone_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%1$s"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>