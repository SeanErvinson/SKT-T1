<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:gravity="center"
    android:padding="@dimen/xsSpacing">

    <ImageView
        android:id="@+id/iv_action_bar_account"
        android:layout_width="@dimen/xlSize"
        android:layout_height="@dimen/xlSize"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/content_description_user_profile"
        android:src="@drawable/ic_account_circle_black_24dp" />

    <ImageView
        android:id="@+id/iv_action_bar_notification"
        android:layout_width="@dimen/xlSize"
        android:layout_height="@dimen/xlSize"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description_notification"
        android:tint="#434343"
        android:src="@drawable/ic_notifications_24px" />
</RelativeLayout>