<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:gravity="center"
    android:padding="@dimen/xsSpacing">

    <ImageView
        android:id="@+id/iv_action_bar_account"
        android:layout_width="@dimen/hSize"
        android:layout_height="@dimen/hSize"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/skt_t1_logo"
        android:src="@drawable/ic_logo_name" />

    <ImageView
        android:id="@+id/iv_action_bar_notification"
        android:layout_width="@dimen/lSize"
        android:layout_height="@dimen/lSize"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description_notification"
        android:tint="#434343"
        android:src="@drawable/ic_notifications_none_black_24dp" />
</RelativeLayout>