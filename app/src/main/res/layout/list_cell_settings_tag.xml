<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="@dimen/mSpacing"
    android:background="@drawable/rectangle_button_border">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_settingsTag_cell_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Keys"
            android:textSize="@dimen/lTextSize"
            android:layout_marginBottom="@dimen/xxsSpacing">
        </TextView>

        <TextView
            android:id="@+id/tv_settingsTag_cell_isConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ACTIVE"
            android:textSize="@dimen/xsTextSize"
            android:layout_marginBottom="@dimen/xxsSpacing">
        </TextView>

        <TextView
            android:id="@+id/tv_settingsTag_cell_soundAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sound alarm: %l$s"
            android:textSize="@dimen/sTextSize">
        </TextView>
    </LinearLayout>

</LinearLayout>