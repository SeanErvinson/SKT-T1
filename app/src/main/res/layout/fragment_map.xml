<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_googleMap"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rectangle_button_border">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_button_buzz"
            android:background="@drawable/rectangle_button_border"
            android:textColor="@color/colorBoxText"
            android:text="@string/map_button_label_buzz" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_button_sit"
            android:background="@drawable/rectangle_button_border"
            android:textColor="@color/colorBoxText"

            android:text="@string/map_button_label_sit" />

    </LinearLayout>
</LinearLayout>