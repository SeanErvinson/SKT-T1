<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryInvert</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:height">@dimen/xlSize</item>
        <item name="height">@dimen/xlSize</item>
    </style>

    <style name="RectangleButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:color">@color/colorSecondary</item>
        <item name="android:background">@drawable/rectangle_button_border</item>
        <item name="android:textSize">@dimen/mTextSize</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TransparentTextButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/mTextSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/xsTextSize</item>
        <item name="android:textColor">@color/colorPrimaryInvert</item>
    </style>

    <style name="Hero" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/xxxlTextSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="SubHero" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sTextSize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>
</resources>
